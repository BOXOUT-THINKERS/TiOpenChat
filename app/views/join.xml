							<View class="yellowLine" />
							<View class="numpadNumber" onSingletap="onClickNumberpad" onClick="onClickNumberpad" itemId="0">
								<ImageView itemId="0" image="/images/signin_number_key_0.png" />
							</View>
							<View class="yellowLine" />
							<View class="numpadNumber" onSingletap="onClickNumberpad" onClick="onClickNumberpad" itemId="delete">
								<ImageView itemId="delete" image="/images/signin_number_key_delete.png" />
							</View>
						</View>
					</View>
				</View>
				<View class="bottomView">
					<Button id="tryCodeBtn" class="bottomBtn" onClick="onClickTryCode"></Button>
				</View>
			</View>
			<View id="verifyView" class="viewWrap">
