							<View class="numpadNumber" onSingletap="onClickNumberpad2" onClick="onClickNumberpad2" itemId="8">
								<ImageView itemId="8" image="/images/signin_number_key_8.png" />
							</View>
							<View class="yellowLine" />
							<View class="numpadNumber" onSingletap="onClickNumberpad2" onClick="onClickNumberpad2" itemId="9">
								<ImageView itemId="9" image="/images/signin_number_key_9.png" />
