<Alloy>
	<Window id="container">
		<View id="versionInfoView">
			<View id="topViewWrap">
				<View id="appImageViewWrap">
					<ImageView id="appImageView"/>
				</View>

				<View id="infoWrap">
					<View class="infoRow">
						<Label id="c_recentVersion"/>
						<Label id="recentVersion" class="left2"/>
					</View>
					<View class="infoRow">
						<Label id="c_currentVersion" />
						<Label id="currentVersion" class="left2"/>
					</View>
				</View>
			</View>

			<View id="bottomViewWrap">
				<Label id="updateBtn" onClick="updateRecentVersion" />
			</View>
		</View>
	</Window>
</Alloy>
